                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/activity_article_nickname"
                        android:textColor="@color/colorPlaceholder"
                        android:textSize="12sp"
                        android:text="By Elad Mekonen"/>
